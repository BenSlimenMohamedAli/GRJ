{% extends 'AdminBase.html.twig' %}

{% block title %}Article{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/quill/1.3.6/quill.snow.css"/>
{% endblock %}
{% block body %}
<!-- Modal -->
<div aria-hidden="true" aria-labelledby="exampleModalLabel" class="modal fade" id="notifmodal" role="dialog"
    tabindex="-1">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button aria-label="Close" class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center p-5">
                <!-- Confirmation -->
                <div id="confirmation">
                    <h6>Voulez vous publier cette article</h6>
                    <button id="publish" class="btn btn-success">confirmer</button>
                    <button aria-label="Close" data-dismiss="modal" class="btn btn-danger">Annuler</button>
                </div>
                <!-- Notifications -->
                <div id="notifications">
                <!-- add admin : sucsess -->
                    <span class="text-success">L'article ajouté avec succés</span>
                    <!-- add admin : filure -->
                    <span class="text-danger">Les types des images autorisés sont : png, jpg, jpeg</span>
                    <span class="text-danger">Vérifier votre connection</span>
                    <span class="text-danger"></span>
                    <span class="text-danger">La taille de l'image ne peut pas dépasser 2M</span>
                    <span class="text-danger">Vérifier votre connection</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- End Page Header -->
<div class="row mt-4">
    <div class="col-lg-12 col-md-12">
        <!-- Add New Post Form -->
        <div class="card card-small mb-3">
            <div class="card-body">
                <form class="add-new-post">
                    <h5>Sélectionner une image :</h5>
                    <input class="form-control form-control-lg mb-3"  id="picture" type="file">
                    <h5>Titre :</h5>
                    <input id="title" class="form-control form-control-lg mb-3" type="text" placeholder="Titre">
                    <h5>Article :</h5>
                    <div id="editor-container" class="add-new-post__editor mb-1"></div>
                </form>
            </div>
        </div>
        <!-- / Add New Post Form -->
    </div>
</div>
<nav class="navbar ">
    <button id="show-modal" class="btn btn-success">Publier</button>
</nav>
{% endblock %}

{% block javascript %} 
    <script src="https://cdnjs.cloudflare.com/ajax/libs/quill/1.3.6/quill.min.js"></script>
    <script src="{{ asset('vendor/Shards-dashboard/scripts/app/app-blog-new-post.1.1.0.js')}}"></script>
    <script src="{{ asset('assets/js/admin/admin_articles.js')}}"></script>
{% endblock %}